<% include ./partials/header %>
<div>Alterar informações de <%= employee.name %></div>
<form  action="edit" method="POST">
		<input type="hidden" name="originalName" value="<%= employee.name %>">
		<div class="input-group">
			<label>Nome: </label>
			<input type="text" name="name" value="<%= employee.name %>">
		</div>
		<div class="input-group">
			<label>Data de início: </label>
			<input type="date" name="startdate" value="<%=employee.start%>">
		</div>	
		<div class="input-group">
			<label>Tipo: </label>
			<select name="type" value="<%=employee.type%>">
				<option value="fazenda"  <%= employee.type == 'fazenda' ? 'selected' : '' %> >Fazenda</option>
				<option value="contratado" <%= employee.type == 'contratado' ? 'selected' : '' %>>Contratado</option>
			</select>
		</div>
		<div class="input-group">
			<button type="submit" class="btn btn-default">Salvar alterações</button>
		</div>
</form>


<% include ./partials/footer %>